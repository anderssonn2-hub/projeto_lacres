{
  "name": "Ambiente PHP com IA",
  "image": "mcr.microsoft.com/devcontainers/php:1-8.2-apache",
  
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {}
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "xdebug.php-debug",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php",
        "intelephense.environment.phpVersion": "8.2"
      }
    }
  },
  
  "forwardPorts": [8080],
  
  "postCreateCommand": "echo '✅ Ambiente PHP configurado com sucesso!' && php -v",
  
  "remoteUser": "vscode"
}